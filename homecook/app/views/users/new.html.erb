<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label "Please select if you are a Cookster:" %>
  <%= f.check_box :cookster %>
  <%= f.submit %>
<% end %>
