<% if @recipe.errors.any? %>
    The action could not be completed due to the following <%=pluralize(@recipe.errors.count, "error")%>:
  <ul>
  <% @recipe.errors.full_messages.each do |m| %>
  <li><%=m%></li>
<%end%>
</ul>
<%end%>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :cuisine_type %>
  <%= f.select :cuisine_type, options_for_select(@recipe.cuisine_types) %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>

  <%= f.label :ingredients %>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name  %><br>

  <%= f.submit %>

<% end %>
